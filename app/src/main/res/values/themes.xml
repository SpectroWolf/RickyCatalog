<resources>

    <style name="Base.Theme.RickyCatalog" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/light_theme_surface</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Button">
        <item name="android:backgroundTint">@color/light_theme_button_bg</item>
        <item name="android:textColor">@color/light_theme_button_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Toolbar">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ScreenBackGround">
        <item name="android:background">@color/light_theme_background</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">@color/light_theme_on_surface</item>
    </style>

    <style name="TextColorVariant">
        <item name="android:textColor">@color/light_theme_on_surface_variant</item>
    </style>

    <style name="ComponentBackGround">
        <item name="android:background">@color/light_theme_surface</item>
    </style>

    <style name="IconColor">
        <item name="android:tint">@color/light_theme_on_surface</item>
    </style>

    <style name="DetailCard">
        <item name="strokeColor">@color/light_theme_on_surface_variant</item>
        <item name="android:background">@color/light_theme_on_surface_variant</item>
    </style>

    <style name="Divider">
        <item name="android:background">@color/light_theme_on_surface_variant</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/dark_theme_surface</item>

        <item name="colorSwitchThumbNormal">@color/dark_theme_surface
        </item>

        <item name="android:colorForeground">@color/dark_theme_background
        </item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Material3.TabLayout">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:colorActivatedHighlight">@color/light_theme_button_bg</item>
        <item name="android:backgroundTint">@color/light_theme_background</item>
        <item name="android:background">@color/light_theme_background</item>
        <item name="tabTextColor">@color/light_theme_on_surface</item>
        <item name="tabSelectedTextColor">@color/light_theme_button_bg</item>
    </style>
</resources>