<resources>

    <style name="Base.Theme.RickyCatalog" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/dark_theme_surface</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

    <style name="Button">
        <item name="android:backgroundTint">@color/dark_theme_button_bg</item>
        <item name="android:textColor">@color/dark_theme_button_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="ScreenBackGround">
        <item name="android:background">@color/dark_theme_background</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">@color/dark_theme_on_surface</item>
    </style>

    <style name="TextColorVariant">
        <item name="android:textColor">@color/dark_theme_on_surface_variant</item>
    </style>

    <style name="ComponentBackGround">
        <item name="android:background">@color/dark_theme_surface</item>
    </style>

    <style name="IconColor">
        <item name="android:tint">@color/dark_theme_on_surface</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/light_theme_surface</item>

        <item name="colorSwitchThumbNormal">@color/light_theme_surface
        </item>

        <item name="android:colorForeground">@color/light_theme_background
        </item>
    </style>
</resources>